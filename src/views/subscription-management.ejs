<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Subscriptions | Mini-Tweeter</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <%- include('partials/styles') %>
  <style>
    /* Subscription Management Specific Styles */
    .subscription-section {
      margin-bottom: 40px;
    }

    .subscription-section h2 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 1px solid var(--border-color);
    }

    .topic-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: var(--white);
      border-radius: 12px;
      margin-bottom: 15px;
      box-shadow: var(--card-shadow);
      transition: var(--transition);
    }

    .topic-item:hover {
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .topic-info {
      flex: 1;
    }

    .topic-info h3 {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 5px;
    }

    .topic-info p {
      color: var(--neutral-color);
      font-size: 0.9rem;
      margin-bottom: 0;
    }

    .topic-genre {
      font-size: 0.85rem;
      background-color: #e8f5fd;
      color: var(--primary-color);
      padding: 4px 12px;
      border-radius: 50px;
      font-weight: 500;
      display: inline-block;
      margin-bottom: 8px;
    }

    .topic-actions {
      display: flex;
      gap: 10px;
    }

    .topic-actions .btn {
      white-space: nowrap;
    }

    @media (max-width: 768px) {
      .topic-item {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .topic-actions {
        margin-top: 15px;
        width: 100%;
      }
      
      .topic-actions form {
        width: 100%;
      }
      
      .topic-actions button {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>

  <div class="container">
    <div class="user-welcome">
      <h1>Manage Your Subscriptions</h1>
    </div>
    
    <div class="dashboard-container">
      <div class="dashboard-header">
        <h2 class="dashboard-title">Your Subscribed Topics</h2>
      </div>
      
      <% if (!subscribedTopics || subscribedTopics.length === 0) { %>
      <div style="padding: 20px;">
        <p>You haven't subscribed to any topics yet.</p>
      </div>
      <% } else { %>
      <div style="padding: 20px;">
        <% subscribedTopics.forEach(topic => { %>
        <div class="topic-item">
          <div class="topic-info">
            <h3><a href="/topic/<%= topic._id %>"><%= topic.title %></a></h3>
            <span class="topic-genre"><%= topic.genre %></span>
            <p><%= topic.description %></p>
          </div>
          <div class="topic-actions">
            <form action="/topic/<%= topic._id %>/unsubscribe" method="POST">
              <input type="hidden" name="returnTo" value="/subscriptions">
              <button type="submit" class="btn btn-danger">Unsubscribe</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
    
    <div class="dashboard-container">
      <div class="dashboard-header">
        <h2 class="dashboard-title">Available Topics</h2>
      </div>
      
      <% if (!availableTopics || availableTopics.length === 0) { %>
      <div style="padding: 20px;">
        <p>No additional topics available for subscription.</p>
      </div>
      <% } else { %>
      <div style="padding: 20px;">
        <% availableTopics.forEach(topic => { %>
        <div class="topic-item">
          <div class="topic-info">
            <h3><a href="/topic/<%= topic._id %>"><%= topic.title %></a></h3>
            <span class="topic-genre"><%= topic.genre %></span>
            <p><%= topic.description %></p>
          </div>
          <div class="topic-actions">
            <form action="/topic/<%= topic._id %>/subscribe" method="POST">
              <input type="hidden" name="returnTo" value="/subscriptions">
              <button type="submit" class="btn btn-primary">Subscribe</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
    
    <div class="dashboard-link">
      <a href="/dashboard" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
      </a>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    document.getElementById('profileToggle').addEventListener('click', function() {
      document.getElementById('profileDropdown').classList.toggle('show');
    });
    
    // Close the dropdown when clicking outside
    window.addEventListener('click', function(event) {
      if (!event.target.matches('#profileToggle') && !event.target.closest('#profileDropdown')) {
        const dropdowns = document.getElementsByClassName('dropdown-menu');
        for (let i = 0; i < dropdowns.length; i++) {
          const openDropdown = dropdowns[i];
          if (openDropdown.classList.contains('show')) {
            openDropdown.classList.remove('show');
          }
        }
      }
    });
  </script>
</body>
</html>